{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
      "vertex": {
        "projectType": "application",
        "schematics": {
          "@schematics/angular:component": {
            "style": "scss"
          }
        },
        "root": "",
        "sourceRoot": "src",
        "prefix": "app",
        "architect": {
          "build": {
            "builder": "@angular-devkit/build-angular:browser",
            "options": {
              "outputPath": "dist/vertex/browser",
              "index": "src/index.html",
              "main": "src/main.ts",
              "polyfills": ["zone.js"],
              "tsConfig": "tsconfig.app.json",
              "inlineStyleLanguage": "scss",
              "assets": [
                { "glob": "**/*", "input": "public" }
              ],
              "styles": [
                "node_modules/remixicon/fonts/remixicon.css",
                "node_modules/ngx-owl-carousel-o/lib/styles/prebuilt-themes/owl.carousel.min.css",
                "node_modules/ngx-owl-carousel-o/lib/styles/prebuilt-themes/owl.theme.default.min.css",
                "node_modules/aos/dist/aos.css",
                "node_modules/swiper/swiper-bundle.min.css",
                "src/styles.scss"
              ],
              "scripts": [
                "./node_modules/apexcharts/dist/apexcharts.min.js",
                "src/assets/js/mycode.js",
                "./node_modules/aos/dist/aos.js"
              ]
            },
            "configurations": {
              "production": { "outputHashing": "all" },
              "development": { "optimization": false, "extractLicenses": false, "sourceMap": true }
            },
            "defaultConfiguration": "production"
          },
  
          "serve": {
            "builder": "@angular-devkit/build-angular:dev-server",
            "options": {
              "buildTarget": "vertex:build:development"
            },
            "configurations": {
              "production": { "buildTarget": "vertex:build:production" },
              "development": { "buildTarget": "vertex:build:development" }
            },
            "defaultConfiguration": "development"
          },
  
          "server": {
            "builder": "@angular-devkit/build-angular:server",
            "options": {
              "outputPath": "dist/vertex/server",
              "main": "src/main.server.ts",
              "tsConfig": "tsconfig.server.json"
            }
          },
  
          "serve-ssr": {
            "builder": "@angular-devkit/build-angular:ssr-dev-server",
            "options": {
              "browserTarget": "vertex:build:development",
              "serverTarget": "vertex:server"
            }
          },
  
          "prerender": {
            "builder": "@angular-devkit/build-angular:prerender",
            "options": {
              "browserTarget": "vertex:build:production",
              "serverTarget": "vertex:server",
              "routes": ["/"]
            }
          }
        }
      }
    },
    "cli": { "analytics": false }
  }
  